<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/carriageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/carriageEditText"
        android:layout_alignRight="@+id/carriageEditText"
        android:padding="@dimen/small_padding"
        android:text="@string/carriage"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <EditText
        android:id="@+id/carriageEditText"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/carriageText"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:hint="@string/carriage"
        android:padding="@dimen/small_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <TextView
        android:id="@+id/placeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/placeEditText"
        android:layout_alignRight="@+id/placeEditText"
        android:padding="@dimen/small_padding"
        android:text="@string/place"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <EditText
        android:id="@+id/placeEditText"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/carriageText"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/carriageEditText"
        android:layout_toRightOf="@+id/carriageEditText"
        android:gravity="center"
        android:hint="@string/place"
        android:padding="@dimen/small_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <TextView
        android:id="@+id/secondNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/carriageEditText"
        android:layout_alignRight="@+id/carriageEditText"
        android:padding="@dimen/small_padding"
        android:text="@string/second_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <EditText
        android:id="@+id/carriageEditText"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/carriageText"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:hint="@string/carriage"
        android:padding="@dimen/small_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <TextView
        android:id="@+id/placeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/placeEditText"
        android:layout_alignRight="@+id/placeEditText"
        android:padding="@dimen/small_padding"
        android:text="@string/place"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

    <EditText
        android:id="@+id/placeEditText"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/carriageText"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/carriageEditText"
        android:layout_toRightOf="@+id/carriageEditText"
        android:gravity="center"
        android:hint="@string/place"
        android:padding="@dimen/small_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/regular_text_size" />

</RelativeLayout>